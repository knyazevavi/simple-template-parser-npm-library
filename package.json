{
  "name": "simple-template-parser",
  "version": "1.0.2",
  "description": "Tiny template string formatter with defaults and pipes.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "start": "node examples/demo.js",
    "build": "rollup -c",
    "build:ci": "rollup -c --silent",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=verbose",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "typedoc"
  },
  "keywords": [
    "template",
    "string",
    "formatter",
    "pipes",
    "typescript"
  ],
  "author": "Victoria",
  "sideEffects": false,
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "rollup": "^4.46.3",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
